---
layout: login.hbs
---
<div class="container perfect-center">
    <div class="row">
        <div class="col-4 offset-4">
            <div class="login">
                <div class="login__title">
                    <a class="nav-bar__lists__link" href="#">
                        <svg class="svg-icon">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#target"></use>
                        </svg>
                        <span>MINTON</span>
                    </a>
                </div>
                <div class="login__form">
                    <form class="login-form" name="login-form" action="dashboard.html">
                        <div class="login__form__item">
                            <input type="email" name="email" required="required">
                            <label class="label-inside" for="email">Email</label>
                        </div>
                        <div class="login__form__item">
                            <input type="password" name="password" required="required">
                            <label class="label-inside" for="password">Password</label>
                        </div>
                        <div class="login__form__item login__form__item--checkbox">
                            <div class="checkbox">
                                <input id="remember" type="checkbox" name="remember" required="required">
                                <label for="remember">Remember me</label>
                            </div>
                        </div>
                        <div class="login__form__item">
                            <button class="button button--full-width" type="button" name="button">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
